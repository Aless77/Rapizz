<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.rapizz.CommandeController_test">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" prefWidth="800.0" prefHeight="600.0">
            <!-- Header -->
            <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #4a6cf3; -fx-padding: 10;">
                <Label text="Nom client" textFill="white" />
                <Label text="Rapizz" style="-fx-font-size: 24;" textFill="white" />
                <Label text="Solde : 0 €" textFill="white" />
            </HBox>

            <!-- Menu -->
            <HBox spacing="20.0" alignment="CENTER">
                <Button text="Historique des commandes" />
                <Button text="Commande" style="-fx-background-color: #4a6cf3; -fx-text-fill: white;" />
                <Button text="Compte" />
            </HBox>

            <!-- Main Content -->
            <HBox spacing="20.0" alignment="CENTER" style="-fx-padding: 20;">
                <!-- Left Section -->
                <VBox spacing="20.0" alignment="TOP_CENTER">
                    <!-- Pizza 1 -->
                    <VBox spacing="10.0" alignment="TOP_CENTER" style="-fx-border-color: black; -fx-padding: 10;">
                        <Label text="Nom Pizza" />
                        <ComboBox fx:id="comboBoxPizza1" />
                        <ComboBox fx:id="comboBoxTaille1" promptText="Taille" />
                        <Label text="prix" />
                        <Button text="Ajoutée" />
                        <Label text="Ingrédients : sauce tomate, mozzarella" />
                    </VBox>
                    <!-- Pizza 2 -->
                    <VBox spacing="10.0" alignment="TOP_CENTER" style="-fx-border-color: black; -fx-padding: 10;">
                        <Label text="Nom Pizza" />
                        <ComboBox fx:id="comboBoxPizza2" />
                        <ComboBox fx:id="comboBoxTaille2" promptText="Taille" />
                        <Label text="prix" />
                        <Button text="Ajoutée" />
                        <Label text="Ingrédients : sauce crème, poulet" />
                    </VBox>
                </VBox>

                <!-- Right Section -->
                <VBox spacing="20.0" alignment="TOP_CENTER">
                    <Label text="Récapitulatif de la commande" style="-fx-font-size: 18;" />
                    <TableView fx:id="tableViewRecap">
                        <columns>
                            <TableColumn text="Nom Pizza" />
                            <TableColumn text="taille" />
                            <TableColumn text="prix unitaire" />
                        </columns>
                    </TableView>
                    <GridPane hgap="10" vgap="10">
                        <Label text="Adresse" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField promptText="Remplissage par défaut" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Complément adresse" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <TextField promptText="Remplissage par défaut" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <Label text="Téléphone" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField promptText="Remplissage par défaut" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </GridPane>
                    <Button text="Commander" />
                    <Label text="Prix total" />
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
