<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.FontWeight?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml">
    <VBox fx:id="inputContainer" alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
        <Text text="Rapizz" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-fill: #4a7bfe;"/>
        <Region prefHeight="100" />
        <HBox alignment="CENTER" spacing="10.0">
            <VBox alignment="CENTER" spacing="1.0">
                <Text text="Email" style="-fx-font-size: 14px; -fx-fill: black;"/>
                <Region prefHeight="5"/>
                <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
                <Region prefHeight="5"/>
                <Text text="Mot de passe" style="-fx-font-size: 14px; -fx-fill: black;"/>
                <Region prefHeight="5"/>
                <PasswordField fx:id="passwordField" promptText="Mot de passe" />
            </VBox>
        </HBox>
        <Region prefHeight="10" />
        <Button fx:id="loginButton" text="Connexion" style="-fx-background-color: #4a7bfe; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Label fx:id="errorMessage" textFill="red"/>
    </VBox>
</AnchorPane>
